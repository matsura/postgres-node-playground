    "pg": "^6.4.2",
    "pg-hstore": "^2.3.2",
    "reflect-metadata": "^0.1.10",
    "sequelize": "^4.28.0",
    "sequelize-typescript": "^0.6.1",
    "swagger-jsdoc": "^1.9.7"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.18",
    "@types/body-parser": "1.16.4",
    "@types/chai": "^4.0.1",
